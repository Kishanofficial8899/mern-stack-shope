{
  "name": "react-shope",
  "version": "1.0.0",
  "description": "A Project Of MERN Stack",
  "main": "index.js",
  "scripts": {
    "client": "cd client && npm install",
    "build": "cd client && npm run build",
    "install-client": "cd client && npm install",
    "start:clinet": "cd client && npm start && cd ..",
    "start": "node server/server.js",
    "start:server": "cd server && npm start && cd ..",
    "dev": "concurrently \"npm run start:clinet\" \"npm run start:server\"",
    "heroku-postbuild": "npm run install-client && npm run build"
  },
  "engines": {
    "node": "12.14.1",
    "npm": "6.14.5"
  },
  "cacheDirectories": [
    "server/node_modules",
    "clinet/node_modules"
  ],
  "repository": {
    "type": "git",
    "url": "git+https://github.com/Kishanofficial8899/mern-shope.git"
  },
